{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "gulp",
			"task": "default",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": ".",
					}
				}
			],
			"label": "gulp: default",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Format Purescript",
			"type": "shell",
			"command": "purs-tidy format-in-place \"${relativeFile}\"",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}